<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
	"http://struts.apache.org/dtds/struts-2.5.dtd">
<struts>
	
	<!-- 设置系统参数 -->
	<constant name="struts.devMode" value="true"/>
	<constant name="struts.action.extension" value="action,do,,"/>
	<constant name="struts.ui.theme" value="simple"/>

	<package name="ylzh-privilege" extends="json-default">
		<global-allowed-methods>regex:.*</global-allowed-methods>
		<action name="privilegeAction_*" method="{1}" class="privilegeAction">
			<result name="addPrivilege" type="redirect">/pages/perSystem.jsp</result>
            <result name="findPrivilegeList" type="json">
                <param name="includeProperties">privilegeList.*</param>
            </result>
            <result name="findPrivilegeNoBindingListByRole" type="json">
                <param name="includeProperties">privilegeList.*</param>
            </result>
		</action>
	</package>
</struts>





